<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그 찍어보기"/>

    <Button
        android:id="@+id/btnToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="토스트 띄워보기"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="메세지 입력"/>

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아무 말이나 입력"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btnMessageToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위에 입력한 내용을, 토스트로"/>

    <Button
        android:id="@+id/btnMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위에 입력한 내용을, 텍스트뷰에 반영"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="입력된 메세지가 나타납니다."/>

</LinearLayout>